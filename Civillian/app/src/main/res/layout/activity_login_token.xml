<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:text="CIVILLIAN\nEMERGENCY REPORT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_marginTop="50dp"/>
    <TextView
        android:text="Masukkan Kode Verifikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp">
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token2"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token3"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token4"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token5"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token6"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token7"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token8"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token9"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/token10"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="11dp"
            android:maxLength="1"/>
    </LinearLayout>


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_submit"
        android:text="Verifikasi"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="11dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_login_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Masukkan kode verifikasi yang telah kami kirim pada email Anda"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp">
        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Atau"
            android:textColor="@color/black"
            android:textSize="9dp"
            android:fontFamily="sans-serif-condensed-light"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@id/tvText"
            android:background="@android:color/darker_gray"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/tvText"
            android:background="@android:color/darker_gray"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_marginTop="15dp"/>


</LinearLayout>